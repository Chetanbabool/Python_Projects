# Online Bank Simulation Program 

class BankInfo:
    def __init__(self, bank_name, acc_holder_name):
        self.bank_name = bank_name
        self.holder_name = acc_holder_name
        self.acc_bal = 0

    def basic_info(self):
        print(f'\nBank Name: {self.bank_name}')
        print(f'Account Holder: {self.holder_name}')

    def withdraw(self, amount):
        if amount > self.acc_bal:
            print("‚ùå Insufficient balance to process this transaction.")
        else:
            self.acc_bal -= amount
            print(f"‚úÖ Withdrawal successful. New balance: ‚Çπ{self.acc_bal}")

    def deposit(self, amount):
        self.acc_bal += amount
        print(f"‚úÖ Deposit successful. New balance: ‚Çπ{self.acc_bal}")

    def check_balance(self):
        print(f"üí∞ Current Balance: ‚Çπ{self.acc_bal}")

# --- Main Program Loop ---

bank_detail = BankInfo('Punjab & Sind Bank', 'Chetan Babool')
bank_detail.basic_info()

while True:
    print("\nChoose an option:")
    print("1. Withdraw")
    print("2. Deposit")
    print("3. Check Balance")
    print("4. Exit")
    
    choice = input("Enter your choice (1/2/3/4): ").strip()

    if choice == '1':
        try:
            amount = int(input("Enter the amount to withdraw: "))
            bank_detail.withdraw(amount)
        except ValueError:
            print("‚ö†Ô∏è Please enter a valid number.")
    
    elif choice == '2':
        try:
            amount = int(input("Enter the amount to deposit: "))
            bank_detail.deposit(amount)
        except ValueError:
            print("‚ö†Ô∏è Please enter a valid number.")
    
    elif choice == '3':
        bank_detail.check_balance()

    elif choice == '4':
        print("üëã Thank you for using the banking system.")
        break
    else:
        print("‚ö†Ô∏è Invalid choice. Please select from 1 to 4.")
